					<mx:DataGridColumn dataField="status" headerText="状态"/>
					<mx:DataGridColumn headerText="操作" dataField="status" width="70">  
						<mx:itemRenderer>  
							<mx:Component>  
								<mx:HBox horizontalCenter="0" verticalCenter="0">  
									
									<mx:Script>
										<![CDATA[
