									<mx:LinkButton label="处理" color="#36A400" textDecoration="underline" buttonMode="true" icon="@Embed('assets/icons/check.png')" visible="{data.status=='待审核'}" click="confirmApply(event)"/>
								</mx:HBox>  
							</mx:Component>  
						</mx:itemRenderer>  
